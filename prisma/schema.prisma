// 1. Configuration de base
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 2. Le modèle Utilisateur
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation : Un utilisateur peut avoir plusieurs notes
  notes     Note[]
  todos     Todo[]
  chatMessages ChatMessage[]
}

// 3. Le modèle Note
model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Clé étrangère : Lien vers l'utilisateur
  userId    String
  // La relation technique pour Prisma
  user      User     @relation(fields: [userId], references: [id])
}

model Todo {
  id          String   @id @default(cuid())
  title       String
  isCompleted Boolean  @default(false) // Par défaut, la tâche n'est pas finie
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
